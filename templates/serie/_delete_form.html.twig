<form method="post" action="{{ path('app_serie_delete', {'id': serie.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serie.id) }}">

    <button 
        class="{{ button_class is defined ? button_class : 'btn btn-danger' }}">
        {{ button_label is defined ? button_label : 'Supprimer' }}
    </button>
</form>
