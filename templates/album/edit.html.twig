{% extends 'base.html.twig' %}

{% block title %}Modifier l'album{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="text-center mb-4 position-relative mx-auto" style="max-width: 900px;">
        <img src="{{ asset('images/3.png') }}" alt="Panneau"
             class="img-fluid rounded shadow" style="width: 100%; max-width: 700px;">

        <h1 class="fw-bold text-white position-absolute" 
            style="top: 25%; left: 50%; transform: translateX(-50%);">
            Modifier l'album
        </h1>

        <div class="form-position px-4 py-3">

            {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data' } }) }}

            {# --- Nom de l'album --- #}
            <div class="row align-items-center mb-2">
                {{ form_label(form.titre, null, {'label_attr': {'class': 'col-sm-4 col-form-label text-end'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>
            </div>

            {# --- Numéro --- #}
            <div class="row align-items-center mb-2">
                {{ form_label(form.numero, null, {'label_attr': {'class': 'col-sm-4 col-form-label text-end'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.numero) }}
                </div>
            </div>

            {# --- Série --- #}
            <div class="row align-items-center mb-2">
                {{ form_label(form.serie, null, {'label_attr': {'class': 'col-sm-4 col-form-label text-end'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.serie, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.serie) }}
                </div>
            </div>

            {# --- Image --- #}
           <div class="row align-items-center mb-0">
    {{ form_label(form.couverture, null, {'label_attr': {'class': 'col-sm-4 col-form-label text-end'}}) }}
    <div class="col-sm-8">
        {{ form_widget(form.couverture, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.couverture) }}
    </div>
</div>
            {# --- Boutons --- #}
            <div class="d-flex justify-content-center gap-2 mt-4">
                <button class="bd-bubble" type="submit">Mettre à jour</button>
                <a href="{{ path('app_album_index') }}" class="bd-bubble">Retour</a>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
</div>

<style>
.bd-bubble {
    display: inline-block;
    padding: 10px 20px;
    max-width: 150px;
    background: #fff8e7;
    border: 2px solid #e0cda9;
    border-radius: 10px;
    font-weight: bold;
    text-decoration: none;
    color: #333;
    text-align: center;
    box-shadow: 3px 3px 0 rgba(0,0,0,0.3);
    transition: transform 0.2s, box-shadow 0.2s;
}
.bd-bubble:hover {
    transform: scale(1.05);
    box-shadow: 5px 5px 0 rgba(0,0,0,0.4);
}
#fileName {
    font-style: italic;
    color: #555;
}
.form-position {
    position: absolute;
    top: 47%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: auto;
    max-width: 400px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const fileInput = document.getElementById('album_image_input');
    const chooseBtn = document.getElementById('chooseImageBtn');
    const fileName = document.getElementById('fileName');

    chooseBtn.addEventListener('click', () => {
        fileInput.click();
    });

    fileInput.addEventListener('change', () => {
        if (fileInput.files.length > 0) {
            fileName.textContent = fileInput.files[0].name;
        } else {
            fileName.textContent = 'Aucun fichier choisi';
        }
    });
});
</script>
{% endblock %}
